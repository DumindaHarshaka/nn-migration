.green-ex-container 
  .side-bar
    .search
      input(type="text", placeholder="Search the green exchange",ng-model="greenExchangeCtrl.message")
        
      input(type="button", name="name", value="Search")
    hr
    a(href="#", ng-click="greenExchange.doCollapse()") 
      .add-new
        .icon
          img(src="/images/add_plant.png", alt="Post a new plant")
        .text
          h2 Post a new plant
          p Post your plant and start exchanging 
    .plant-info(ng-class="greenExchange.collapse ? 'collapse' : ''")
      .form
        form(name="plantForm")
          label Plant name 
          input(type="text", name="plantName",id="plantName",placeholder="Name of the plant" required)
          
          label Description
          
          textarea(name="description",id="description", rows="4", cols="40",placeholder="Description") 
          
          label Quantity 
          
          input(type="number",min="1",name="quantity",id="qty", placeholder="Quantity")
          
          label Location 
          
          input(id="loc" places-auto-complete size=80 ng-model="greenExchange.address" component-restrictions="{country:'lk'}" types="{{types}}" on-place-changed="greenExchange.placeChanged()" required)  
      .map  
        ng-map(class="map")
      

    hr
    .filler
